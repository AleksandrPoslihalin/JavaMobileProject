<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">  <!-- состояние нажатия -->
        <shape android:shape="rectangle">
            <solid android:color="#666666" />  <!-- светло-серый -->
            <corners android:radius="14dp" />  <!-- закругленные углы -->
        </shape>
    </item>
    <item>  <!-- состояние по умолчанию -->
        <shape android:shape="rectangle">
            <solid android:color="#404040" />  <!-- темно-серый -->
            <corners android:radius="14dp" />
        </shape>
    </item>
</selector>



