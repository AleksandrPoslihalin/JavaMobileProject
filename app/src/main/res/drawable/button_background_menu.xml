<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_pressed="true">  <!-- состояние нажатия -->
        <shape android:shape="rectangle">
            <solid android:color="#696969" />  <!-- серый цвет для нажатия -->
            <corners android:radius="18dp" />  <!-- закругленные углы -->
        </shape>
    </item>
    <item>  <!-- состояние по умолчанию -->
        <shape android:shape="rectangle">
            <solid android:color="#808080" />  <!-- темно-серый цвет -->
            <corners android:radius="18dp" />
        </shape>
    </item>
</selector>

